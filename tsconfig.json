{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ES5",
		"declaration": true,
		"strict": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"paths": {
			"*": ["node_modules/*"]
		},
		"moduleResolution": "node"
	},
	"include": ["src/*"],
	"exclude": ["node_modules", "dist"]
}
